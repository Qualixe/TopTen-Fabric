<section class="icon-item-section color-{{ section.settings.color_scheme }} {% if section.settings.contact_icon %}contact-icon-item-section{% endif %}">
  <div class="container">
    <div class="icon-items">
      {% for icon in section.blocks %}
        <div class="icon-item">
          <span class="icon">
            {% if icon.settings.image != blank %}
              {{ icon.settings.image | image_url: width: 1000 | image_tag }}
            {% else %}
              {{ icon.settings.icon }}
            {% endif %}
          </span>
          <p class="icon-item-title">{{ icon.settings.title }}</p>
          <p class="icon-item-text">{{ icon.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Icon Item Section",
  "settings": [
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme"
    }
  ],
  "blocks": [
    {
      "type": "icon_item",
      "name": "Icon Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon Image"
        },
        {
          "type": "html",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Icon Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Icon Text"
        },
        {
          "type": "checkbox",
          "label": "Contact Icon",
          "id": "contact_icon",
          "default": false
        },
        {
          "type": "header",
          "content": "Color"
        },
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "Color Scheme"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Item Section"
    }
  ]
}
{% endschema %}

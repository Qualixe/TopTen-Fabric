<section class="grid-category-section">
  <div class="grid-category-items">
    {% for block in section.blocks %}
      <div class="grid-category-item">
        <a class="grid-category-item-inner" href="{{ block.settings.link }}">
          <div class="grid-category-item-img">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 1000 | image_tag }}
            {% endif %}
          </div>
          <div class="grid-category-item-content">
            <div class="grid-category-item-content-inner">
              <h2 class="grid-category-item-content-title">{{ block.settings.title }}</h2>
            </div>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</section>
{% schema %}
{
  "name": "Grid Collections",
  "settings": [
    {
      "type": "header",
      "content": "Grid Category"
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme"
    }
  ],
  "blocks": [
    {
      "type": "Category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Ready to Wear"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid Collections"
    }
  ]
}
{% endschema %}

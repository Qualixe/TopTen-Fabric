<div class="size-chart-sidebar">
  <span class="size-chart-sidebar-close-window-btn"></span>
  <div class="size-chart-sidebar-inner">
    <div class="size-chart-sidebar-top">
      <p class="size-chart-title">{{ block.settings.heading }}</p>
      <button class="size-chart-close-btn">
        <svg width="24" height="24" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M3 15L15 3" stroke="#232323" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          </path>
          <path d="M15 15L3 3" stroke="#232323" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          </path>
        </svg>
      </button>
    </div>
    <div class="size-chart-sidebar-content">
      <div class="size-chart-items">
        {{ block.settings.text }}
      </div>
    </div>
  </div>
</div>
